{
  "name": "hex-ui",
  "version": "1.0.0",
  "description": "Beautiful, production-ready UI components built with React, Next.js, Tailwind CSS, and Framer Motion",
  "author": "Hex UI Team <support@hex-ui.com>",
  "license": "MIT",
  "homepage": "https://hex-ui.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/hex-ui.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/hex-ui/issues"
  },
  "keywords": [
    "react",
    "nextjs",
    "tailwindcss",
    "components",
    "ui-library",
    "design-system",
    "framer-motion",
    "typescript",
    "shadcn",
    "radix-ui"
  ],
  "private": false,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "npm run generate:section-code && next build --turbopack",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "registry:build": "shadcn build",
    "generate:section-code": "tsx scripts/generate-section-code.ts",
    "prepare": "husky || true"
  },
  "dependencies": {
    "@base-ui-components/react": "^1.0.0-beta.4",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@radix-ui/react-use-controllable-state": "^1.2.2",
    "@shikijs/transformers": "^3.15.0",
    "@tabler/icons-react": "^3.35.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.0.0",
    "lucide-react": "^0.552.0",
    "motion": "^12.23.24",
    "next": "15.5.4",
    "next-themes": "^0.4.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-icons": "^5.5.0",
    "react-use-measure": "^2.1.7",
    "shiki": "^3.15.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.0",
    "shadcn": "^3.5.0",
    "tailwind-scrollbar": "^4.0.2",
    "tailwindcss": "^4",
    "tsx": "^4.20.6",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5"
  }
}
